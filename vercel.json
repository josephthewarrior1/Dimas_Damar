{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "cleanUrls": true
        }
      }
    ],
    "routes": [
      {
        "src": "/assets/(.*)",
        "headers": { "Cache-Control": "public, max-age=31536000" }
      },
      {
        "src": "/_next/static/(.*)",
        "dest": "/_next/static/$1"
      },
      {
        "src": "/(.*)", 
        "dest": "/index.html",
        "headers": { "Cache-Control": "no-cache" }
      }
    ],
    "trailingSlash": false
  }